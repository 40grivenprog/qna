  <div class = 'row justify-content-center mt-3'>
    <div class = "col col-md-4 border" >
      <h2>Sign Up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <%= render "devise/shared/error_messages", resource: resource %>

        <div class ="form-group">

          <p>
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: 'Enter Email' %>
          </p>

          <p>
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control password", placeholder: 'Enter Password' %>
          </p>

          <p>
            <%= f.label :password_confirmation %>
            <div class="d-flex flex-row">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control confirmation", placeholder: 'Confirmate Password' %>
            </div>
          </p>

          <%= f.submit 'Sign Up', class: "btn btn-success" %>
        </div>

      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
