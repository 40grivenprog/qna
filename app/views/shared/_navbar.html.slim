nav class="navbar navbar-dark" style="background-color: #4F5A6E;"
  = link_to 'Q&A', root_path, class: 'navbar-brand'
  -  if user_signed_in?
    = form_with url: search_path, local: true, class: 'form-inline' do |f|
      = f.text_field :body, class: 'form-control'
      = f.submit 'Find', class: 'btn btn-success'
      = f.select :type, SearchService::TYPES

  ul class="list-inline navbar-nav ml-auto"
    div class="d-flex flex-row"
      li class="nav-item mr-3"
        = link_to 'Add question', new_question_path, class: 'btn btn-success'
      -  if user_signed_in?
        li class="nav-item mr-2"
          = link_to 'My Badges', badges_path, class: 'nav-link'
        li class="nav-item mr-3"
          = link_to 'Log Out', destroy_user_session_path, method: :delete, class: 'nav-link'
      - else
        li class="nav-item mr-2"
          = link_to 'Log In', new_user_session_path, class: 'nav-link'
